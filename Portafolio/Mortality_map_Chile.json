{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Chile: Mortality Rate by Region",
    "subtitle": "Deaths per 1,000 population",
    "anchor": "middle"
  },

  "width": 400,
  "height": 600,

  "data": {
    "url": "https://raw.githubusercontent.com/antogriffin12/antogriffin12.github.io/main/chile_mortality_rates_2002_2022.csv"
  },

  "params": [
    {
      "name": "year_select",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2002,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    }
  ],

  "transform": [
    {
      "filter": "datum.year == year_select"
    },
    {
      "lookup": "region_clean",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/antogriffin12/antogriffin12.github.io/main/chilemap.json",
          "format": {
            "type": "json",
            "property": "features"
          }
        },
        "key": "properties.name",
        "fields": ["type", "geometry", "properties"]
      }
    }
  ],

  "projection": {
    "type": "mercator"
  },

  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 1
  },

  "encoding": {
    "color": {
      "field": "tasa_mortalidad",
      "type": "quantitative",
      "scale": {
        "scheme": "reds",
        "domain": [4, 9]
      },
      "title": "Mortality Rate (per 1,000)"
    },
    "tooltip": [
      {
        "field": "region_clean",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "tasa_mortalidad",
        "type": "quantitative",
        "title": "Mortality Rate",
        "format": ".2f"
      },
      {
        "field": "defunciones",
        "type": "quantitative",
        "title": "Total Deaths",
        "format": ","
      }
    ]
  }
}