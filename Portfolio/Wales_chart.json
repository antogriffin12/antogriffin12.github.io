{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Choropleth map showing Wales average household income at MSOA level.",
  "title": {
    "text": "Wales: Average Household Income by MSOA",
    "fontSize": 16,
    "anchor": "middle"
  },
  "width": 350,
  "height": 450,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/Wales_MSOA.topojson",
    "format": {"type": "topojson", "feature": "data"}
  },
  "transform": [
    {
      "lookup": "properties.MSOA21CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/antogriffin12/antogriffin12.github.io/refs/heads/main/Portfolio/AvergaeHouseholdIncome.csv"
        },
        "key": "geo_id",
        "fields": ["value"]
      }
    }
  ],
  "mark": {
    "type": "geoshape",
    "stroke": "white",
    "strokeWidth": 0.3
  },
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "scale": {
        "scheme": "greens",
        "domain": [20, 40]
      },
      "title": "Income (£ thousands)"
    },
    "tooltip": [
      {"field": "properties.MSOA21NM", "type": "nominal", "title": "MSOA Name"},
      {"field": "value", "type": "quantitative", "title": "Income (£ thousands)", "format": ".2f"},
      {"field": "properties.MSOA21CD", "type": "nominal", "title": "MSOA Code"}
    ]
  },
  "projection": {
    "type": "mercator"
  }
}