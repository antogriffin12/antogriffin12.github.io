{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "UK Life Expectancy at Birth",
    "anchor": "start",
    "subtitle": "Years | Source: Our World in Data",
    "fontSize": 16,
    "subtitleFontSize": 12,
    "color": "#000000",
    "subtitleColor": "#666666"
  },
  "width": 500,
  "height": 300,
  "background": "#ffffff",
  "data": {
    "url": "data/life-expectancy.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {"filter": "datum.Code == 'GBR'"},
    {"filter": "datum.Year >= 1950"}
  ],
  "mark": {
    "type": "line",
    "color": "#0066cc",
    "strokeWidth": 2,
    "point": false,
    "tooltip": true
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "scale": {"domain": [1950, 2023]},
      "axis": {
        "title": "",
        "grid": false,
        "labelAngle": 0,
        "format": "d"
      }
    },
    "y": {
      "field": "Period life expectancy at birth",
      "type": "quantitative",
      "scale": {"domain": [0, 90]},
      "axis": {
        "title": "Years",
        "grid": true,
        "gridOpacity": 0.2
      }
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "quantitative", "title": "Year", "format": "d"},
      {"field": "Period life expectancy at birth", "type": "quantitative", "title": "Life Expectancy", "format": ".2f"}
    ]
  }
}
